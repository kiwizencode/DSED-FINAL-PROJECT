@model IEnumerable<DSED_FINAL.Models.Tank>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderBy(x => x.Code)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPk">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPk">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPk">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
